<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_opaque"
    tools:context=".Fragments.ProfileFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/basic_profile_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_margin="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/cover"
                    android:background="@drawable/cover"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageview_profile_u"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="90dp"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="6sp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/user" />
                <TextView
                    android:id="@+id/usernameP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_below="@+id/imageview_profile_u"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Username"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"
                    android:fontFamily="@font/bold"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_below="@+id/usernameP"
                    android:background="@color/blue_opaque"
                    />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_below="@+id/usernameP"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="Name of user"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"
                    android:fontFamily="@font/bold"

                    />

                <TextView
                    android:id="@+id/summary"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_below="@+id/title"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:text="HeadLine will appear here"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="10dp"
                    />

                <ImageView
                    android:id="@+id/edit_details"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="185dp"
                    app:srcCompat="@drawable/ic_edit"

                    />

            </RelativeLayout>

        </LinearLayout>






        <LinearLayout
            android:id="@+id/popularity_details"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/basic_profile_details"
            android:background="@color/gray0"
            android:weightSum="3"
            android:layout_margin="10dp"
            android:padding="15dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1749"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray3"
                    android:textSize="21sp"
                    android:fontFamily="@font/bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Followers"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/gray3"
                    android:textSize="17sp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="283"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray3"
                    android:textSize="21sp"
                    android:fontFamily="@font/bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Contributions"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/gray3"
                    android:textSize="17sp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1749"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray3"
                    android:textSize="21sp"
                    android:fontFamily="@font/bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Following"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/gray3"
                    android:textSize="17sp"

                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_details"
            android:layout_width="match_parent"
            android:minHeight="60dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_opaque"
            android:layout_below="@+id/popularity_details"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:padding="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_item"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:id="@+id/about"
                    android:layout_margin="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About you will appear here "
                    />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/contact_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/about_details"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:background="@color/blue_opaque"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_item"
                >


                <TextView
                    android:id="@+id/contcap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"

                    android:text="Contact"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"

                    />

                <TextView
                    android:id="@+id/email_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:text="Email"
                    android:textColor="@color/gray"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/email_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="40dp"
                    android:layout_below="@+id/email_t"
                    android:text="XYZ@gmail.com"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="20dp"
                    />
                <TextView
                    android:id="@+id/website_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:text="Website"
                    android:layout_below="@+id/email_t"
                    android:textColor="@color/gray"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/website_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="40dp"
                    android:layout_below="@+id/website_t"
                    android:text="svvv.edu.in"
                    android:textColor="@color/gray"
                    android:layout_marginBottom="20dp"
                    />

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/interests_details"
            android:layout_width="match_parent"
            android:minHeight="60dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_opaque"
            android:layout_below="@+id/contact_details"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:padding="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_item"
                >
                <ImageView
                    android:id="@+id/edit_interests"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="8dp"
                    app:srcCompat="@drawable/ic_edit"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Interests"
                    android:layout_alignBaseline="@+id/edit_interests"
                    android:layout_toLeftOf="@+id/edit_interests"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_margin="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Intrest will appear here "
                    />
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.core.widget.NestedScrollView>