<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white_opaque"
    tools:context=".Fragments.UserProfileFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/basic_profile_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_margin="10dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:id="@+id/cover"
                    android:background="@drawable/cover"
                    />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageview_profile_u"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="90dp"
                    app:civ_border_color="@color/colorPrimaryDark"
                    app:civ_border_width="6sp"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/user" />
                <TextView
                    android:id="@+id/follow_unfollow_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/cover"
                    android:text="Follow"
                    android:padding="9dp"
                    android:fontFamily="@font/bold"
                    android:layout_marginTop="10dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20dp"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/cardview_design"
                    />


                <TextView
                    android:id="@+id/usernameP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageview_profile_u"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/bold"
                    android:text="username"
                    android:textColor="@color/colorPrimary"
                    android:textSize="20sp"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_below="@+id/usernameP"
                    android:background="@color/blue_opaque"
                    />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/usernameP"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/bold"
                    android:text="Name of user"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22sp"

                    />

                <TextView
                    android:id="@+id/summary"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/title"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="the headline of the person"
                    android:textAlignment="center"
                    android:textColor="@color/gray" />

            </RelativeLayout>

        </LinearLayout>






        <LinearLayout
            android:id="@+id/popularity_details"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/basic_profile_details"
            android:background="@color/gray0"
            android:weightSum="3"
            android:layout_margin="10dp"
            android:padding="15dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1749"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray3"
                    android:textSize="21sp"
                    android:fontFamily="@font/bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Followers"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/gray3"
                    android:textSize="17sp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="283"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray3"
                    android:textSize="21sp"
                    android:fontFamily="@font/bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Contributions"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/gray3"
                    android:textSize="17sp"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1749"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/gray3"
                    android:textSize="21sp"
                    android:fontFamily="@font/bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="Following"
                    android:fontFamily="@font/bold"
                    android:textColor="@color/gray3"
                    android:textSize="17sp"

                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/about_details"
            android:layout_width="match_parent"
            android:minHeight="60dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_opaque"
            android:layout_below="@+id/popularity_details"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:padding="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_item"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    />

                <TextView
                    android:id="@+id/about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="40dp"
                    android:layout_marginRight="40dp"
                    android:layout_marginBottom="40dp"
                    android:text="this is the about section of the user \nthis is the about section of the user" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/contact_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@+id/about_details"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:background="@color/blue_opaque"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_item"
                >


                <TextView
                    android:id="@+id/contcap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"

                    android:text="Contact"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"

                    />

                <TextView
                    android:id="@+id/email_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:text="Email"
                    android:textColor="@color/gray"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/email_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/email_t"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="20dp"
                    android:text="example123@mail.com"
                    android:textColor="@color/gray" />
                <TextView
                    android:id="@+id/website_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:text="Website"
                    android:layout_below="@+id/email_t"
                    android:textColor="@color/gray"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/website_p"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/website_t"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="20dp"
                    android:text="www.example.com"
                    android:textColor="@color/gray" />

            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/interests_details"
            android:layout_width="match_parent"
            android:minHeight="60dp"
            android:layout_height="wrap_content"
            android:background="@color/blue_opaque"
            android:layout_below="@+id/contact_details"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:padding="5dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_item"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Interested topics"
                    android:layout_alignParentRight="true"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimaryDark"
                    />
                <TextView
                    android:layout_margin="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="i am doing this project, one by one public static void main String args throws IOException BufferedReader br = new Buffered Reader new InputStream Reader this is amaxing "

                    />
            </RelativeLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/texttt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue_opaque"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"
            android:padding="5dp"
            android:layout_below="@+id/interests_details"

            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blogs"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/blogHolder"
                />

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:background="@color/blue_opaque"
            android:orientation="horizontal"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="0dp"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerView"
            android:layout_below="@+id/texttt"
            >




        </androidx.recyclerview.widget.RecyclerView>








    </RelativeLayout>

</androidx.core.widget.NestedScrollView>